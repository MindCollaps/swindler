{
    "name": "Swindler Dev",
    "image": "mcr.microsoft.com/devcontainers/universal",
    "hostRequirements": {
        "cpus": 4,
        "memory": "8gb"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "vscode-icons-team.vscode-icons"
            ]
        }
    },
    "forwardPorts": [3000, 51212],
    "remoteUser": "root",
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "workspaceFolder": "/workspaces/swindler"
}